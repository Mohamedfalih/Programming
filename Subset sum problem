SOURCE CODE : 

#include <iostream>
#include <vector>
using namespace std;

void printsubset(int set[], int n, int sum, vector<int>& subset) {

    if (sum == 0) {
        cout << "{ ";
        for (int x : subset)
            cout << x << " ";
        cout << "}" << endl;
        return;
    }

    if (n == 0 || sum < 0)
        return;

    subset.push_back(set[n - 1]);
    printsubset(set, n - 1, sum - set[n - 1], subset);

    subset.pop_back();
    printsubset(set, n - 1, sum, subset);
}

int main() {
    int set[] = {3, 34, 4, 12, 5, 2};
    int sum = 9;
    int n = sizeof(set) / sizeof(set[0]);

    vector<int> subset;
    printsubset(set, n, sum, subset);

    return 0;
}

OUTPUT :

{ 3 4 2 }
{ 4 5 }