SOURCE CODE : 

#include <iostream>
using namespace std;

void printSubset(int subset[], int size) {
    cout << "{ ";
    for (int i = 0; i < size; i++)
        cout << subset[i] << " ";
    cout << "}" << endl;
}

void subsetSumBacktrack(int S[], int n, int index, int sum, int target, int subset[], int subsetSize) {
    // Base condition: if sum equals target, print subset
    if (sum == target) {
        printSubset(subset, subsetSize);
        return;
    }

    // If sum exceeds target or end of array reached, prune this branch
    if (sum > target || index == n)
        return;

    // --- Backtracking begins here ---

    // 1. Include S[index]
    subset[subsetSize] = S[index];
    subsetSumBacktrack(S, n, index + 1, sum + S[index], target, subset, subsetSize + 1);

    // 2. Exclude S[index] (backtrack step)
    subsetSumBacktrack(S, n, index + 1, sum, target, subset, subsetSize);
}

int main() {
    int n,target;
    cout<<"Enter the size of the set : ";
    cin>>n;
    int S[n];
    cout<<"\nEnter the set elements  : ";
    for(int i=0;i<n;i++)
    {
        cin>>S[i];
    }
    cout<<"Enter the target : ";
    cin>>target;
    int subset[50]; // to store elements of current subset

    cout << "Subsets with sum " << target << " are:\n";
    subsetSumBacktrack(S, n, 0, 0, target, subset, 0);

    return 0;
}

OUTPUT : 

Enter the size of the set : 5

Enter the set elements  : 1 2 3 4 5
Enter the target : 6

Subsets with sum 6 are : 
{ 1 2 3 }
{ 1 5 }
{ 2 4 }