SOURCE CODE:

#include <iostream>
#include <string>
using namespace std;

int LCS(string X, string Y) {
    int m = X.length();
    int n = Y.length();
    int dp[m+1][n+1];

    // Build table bottom-up
    for (int i = 0; i <= m; i++) {
        for (int j = 0; j <= n; j++) {
            if (i == 0 || j == 0)
                dp[i][j] = 0;
            else if (X[i-1] == Y[j-1])
                dp[i][j] = 1 + dp[i-1][j-1];
            else
                dp[i][j] = max(dp[i-1][j], dp[i][j-1]);
        }
    }

    // The last cell contains the length of LCS
    return dp[m][n];
}

int main() {
    string X = "ABCBDAB";
    string Y = "BDCAB";

    cout << "Length of LCS is " << LCS(X, Y) << endl;
    return 0;
}

OUTPUT : 

Length of LCS is 4